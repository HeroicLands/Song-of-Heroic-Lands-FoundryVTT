{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2022", "ES2022.Intl", "DOM"],
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "useDefineForClassFields": false,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "outDir": "./build/generated",
        "strict": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["vite/client", "vitest/globals"],
        "typeRoots": ["./node_modules/@types", "./types"],
        "baseUrl": ".",
        "paths": {
            "@types/*": ["types/*"],
            "@utils": ["src/utils/index.ts"],
            "@utils/*": ["src/utils/*"],
            "@foundry/*": ["src/foundry/*"],
            "@logic/*": ["src/logic/*"],
            "@templates/*": ["templates/*"],
            "@assets/*": ["assets/*"],
            "@lang/*": ["lang/*"],
            "@tests/*": ["tests/*"],
            "@sohl-global": ["types/sohl-global.d.ts"]
        }
    },
    "include": [
        "src/foundry/**/*.mjs",
        "src/logic/**/*.ts",
        "src/utils/**/*.ts",
        "tests/**/*.ts",
        "types/**/*.d.ts",
        "build/docbundle/index.ts"
    ],
    "exclude": ["build/docs", "build/generated", "build/stage", "build/tmp"]
}
