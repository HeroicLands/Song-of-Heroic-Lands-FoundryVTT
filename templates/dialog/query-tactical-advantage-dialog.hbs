<form id="query-tactical-advantage">
    <p>{{prompt}}<br /></p>

    {{#each taList as |idx|}}
    <div class="form-group flexrow">
        <label>Tactical Advantage {{idx}}:</label>
        <select name="tacadv_{{idx}}">
            {{#each ../taMap}}
            <option value="{{key}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    {{/each}}
</form>
