<form>
    <div class="form-group">
        <h3>Missile Name: {{name}}</h3>
    </div>
    <div class="form-group">
        <label>Num Damage Dice:</label>
        <input type="number" name="damageDice" value="1" data-dtype="Number" />
    </div>
    <div class="form-group">
        <label for="range">Range (&plus; Impact):</label>
        <select name="range">
            {{#select weaponAspect}} {{#each ranges as |value key|}}
            <option value="{{key}}">{{key}} ({{value}})</option>
            {{/each}} {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>Additional Weapon Impact:</label>
        <input type="number" name="addlImpact" value="0" data-dtype="Number" />
    </div>
</form>
