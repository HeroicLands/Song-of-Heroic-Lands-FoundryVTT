<form id="document-create item-create" autocomplete="off">
    <div class="form-group">
        <label>Name</label>
        <div class="form-fields">
            <input
                type="text"
                name="name"
                placeholder="{{defaultName}}"
                autofocus />
        </div>
    </div>

    <div class="form-group">
        <label>Type</label>
        <div class="form-fields">
            <select name="type">
                {{selectOptions types selected=type}}
            </select>
        </div>
    </div>

    {{#if hasFolders}}
    <div class="form-group">
        <label>Folder</label>
        <div class="form-fields">
            <select name="folder">
                {{#select folder}}
                <option value=""></option>
                {{#each folders}}
                <option value="{{ this.id }}">{{ this.name }}</option>
                {{/each}} {{/select}}
            </select>
        </div>
    </div>
    {{/if}}

    <div class="form-group" id="subtypes">
        <label>Subtypes</label>
        <select
            class="resource-value"
            id="subtype-select"
            name="subtype"
            data-dtype="String">
            {{selectOptions subtypes selected=subtype}}
        </select>
    </div>
</form>
