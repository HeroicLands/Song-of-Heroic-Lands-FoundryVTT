<div class="hmk chat-card item-card" data-actor-uuid="{{actor.uuid}}">
    <header class="card-header flexcol">
        <h3 class="title">{{title}}</h3>
        <h4 class="subtitle">{{sourceTestResult.token.name}} vs. {{targetToken.name}}</h4>
    </header>

    <div class="card-content flex-group-center">
        <span class="value">{{sourceTestResult.token.name}} performs a {{sourceTestResult.title}} against {{opposedTestResult.targetToken.name}}</span>
    </div>
    <div class="card-content center">
        <span class="result-desc">{{description}}</span>
    </div>
    {{#if opposedTests}}
        <div class="card-buttons {{#if (gt opposedTests.length 1)}}grid grid-2col{{/if}}">
            {{#each opposedTests}}
            <button
                data-action="{{action}}"
                data-action-handler-uuid="{{../targetToken.actor.uuid}}"
                data-opposed-test-result-json="{{../opposedTestResultJson}}">
                <i class="{{icon}}"></i> {{label}}
            </button>
            {{/each}}
        </div>
    {{/if}}
</div>
